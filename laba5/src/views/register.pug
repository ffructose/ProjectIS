doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Register
  body
    form(id="register-form")
      h2 Register
      label(for="user_login") Username:
      input(type="text" id="user_login" name="user_login" required)
      br
      label(for="user_password") Password:
      input(type="password" id="user_password" name="user_password" required)
      br
      label(for="user_mail") Email:
      input(type="email" id="user_mail" name="user_mail" required)
      br
      label(for="user_phone") Phone:
      input(type="text" id="user_phone" name="user_phone" required)
      br
      button(type="submit") Register

    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script.
      document.getElementById('register-form').addEventListener('submit', async (event) => {
        event.preventDefault();
        const user_login = document.getElementById('user_login').value;
        const user_password = document.getElementById('user_password').value;
        const user_mail = document.getElementById('user_mail').value;
        const user_phone = document.getElementById('user_phone').value;
        
        try {
          const response = await axios.post('/register', { user_login, user_password, user_mail, user_phone });
          alert('User registered successfully');
        } catch (error) {
          console.error('Error registering user:', error);
          alert('Error registering user');
        }
      });
